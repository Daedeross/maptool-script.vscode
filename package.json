{
  "name": "maptool-script",
  "displayName": "MapTool-Script Support",
  "description": "Syntax highlighting support for the old MapTool scripting language",
  "icon": "images/logo.png",
  "version": "1.0.0-alpha1",
  "publisher": "bryan-c-jones",
  "repository": {
    "type": "git",
    "url": "https://github.com/Daedeross/maptool-script.vscode"
  },
  "keywords": [
    "multi-root ready"
  ],
  "engines": {
    "vscode": "^1.75.0"
  },
  "activationEvents": [
    "onLanguage:plaintext"
  ],
  "categories": [
    "Programming Languages"
  ],
  "main": "./dist/client",
  "contributes": {
    "languages": [
      {
        "id": "mts",
        "aliases": [
          "MapTool Script",
          "mts"
        ],
        "extensions": [
          ".mts"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "mts",
        "scopeName": "source.mts",
        "path": "./syntaxes/mts.tmLanguage.json"
      }
    ],
    "configurationDefaults": {
      "[mts]": {
        "editor.semanticHighlighting.enabled": true
      },
      "editor.tokenColorCustomizations": {
        "textMateRules": [
          {
            "scope": [
              "entity.name.function.built-in.mts",
              "support.function.mts"
            ],
            "settings": {
              "fontStyle": "bold"
            }
          }
        ]
      }
    },
    "semanticTokenScopes": [
      {
        "scopes": {
          "colon": [
            "keyword.other.mts"
          ]
        }
      }
    ],
    "configuration": {
      "type": "object",
      "title": "MapTool Language configuration",
      "properties": {
        "mapToolScript.highlighting.legacy": {
          "description": "Enable Legacy (TextMate) syntax highlighting.",
          "scope": "window",
          "type": "boolean",
          "default": false
        },
        "mapToolScriptServer.wikiUriRoot": {
          "scope": "window",
          "type": "string",
          "default": "https://wiki.rptools.info/index.php",
          "description": "The root URL for the MapTool wiki; what queries should be appended to."
        },
        "mapToolScriptServer.maxNumberOfProblems": {
          "scope": "resource",
          "type": "number",
          "default": 100,
          "description": "Controls the maximum number of problems produced by the server."
        },
        "mapToolScriptServer.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "verbose",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm install && npm run package",
    "parseyaml": "python build-grammar.py syntaxes/mts.tmLanguage.yaml syntaxes/mts.tmLanguage.json",
    "webpack": "webpack --mode development",
    "webpack-dev": "webpack --mode development --watch",
    "package": "npm run parseyaml && webpack --mode production --devtool hidden-source-map",
    "antlr": "npm run antlr --prefix ./server",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
    "postinstall": "cd client && npm install && cd ../server && npm install && cd .. && npm run antlr",
    "test": "sh ./scripts/e2e.sh"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "^18.14.6",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "eslint": "^8.57.0",
    "mocha": "^10.3.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.90.3",
    "webpack-cli": "^5.1.4"
  }
}
