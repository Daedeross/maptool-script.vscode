{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES2020",
    "moduleResolution": "Node",
    "outDir": "out",
    "sourceMap": true,
    "esModuleInterop":true,
    "lib": [
      "ES2020"
    ],
    "noImplicitAny": true,
    "strictNullChecks": true,
    "preserveConstEnums": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "types": [
      "node"
    ],
  },
  "include": [
    "**/*.d.ts",
    "src/grammars/*.ts",
    "src/useit.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
